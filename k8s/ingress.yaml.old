apiVersion: networking.k8s.io/v1
kind: Ingress
metadata:
  name: gestion-herencia
  annotations:
    # Certificado SSL
    cert-manager.io/cluster-issuer: letsencrypt-prod
    # Middleware para eliminar el prefijo /herencia/api del API
    traefik.ingress.kubernetes.io/router.middlewares: kube-system-https-redirect@kubernetescrd,herencia-strip-herencia-api@kubernetescrd
spec:
  ingressClassName: traefik
  rules:
  # Regla para acceso externo por dominio
  - host: northr3nd.duckdns.org
    http:
      paths:
      # API Backend bajo /herencia/api (debe ir primero, más específico)
      - path: /herencia/api
        pathType: Prefix
        backend:
          service:
            name: gestion-herencia-backend
            port:
              number: 3000
      # Frontend Angular (menos específico, va después)
      - path: /herencia
        pathType: Prefix
        backend:
          service:
            name: gestion-herencia
            port:
              number: 80
  # TLS configuration
  tls:
  - hosts:
    - northr3nd.duckdns.org
    secretName: northr3nd-tls
