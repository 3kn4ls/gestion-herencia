# Template for MongoDB credentials Secret
# DO NOT commit the actual secret-mongodb.yaml file to git!
#
# To create the actual secret, run:
# kubectl create secret generic mongodb-credentials \
#   --from-literal=mongodb-uri='mongodb://USER:PASSWORD@HOST:PORT/DATABASE?authSource=admin' \
#   -n herencia
#
# Or copy this file to secret-mongodb.yaml and replace the base64 value below
# with your actual MongoDB URI encoded in base64:
# echo -n 'mongodb://USER:PASSWORD@HOST:PORT/DATABASE?authSource=admin' | base64
#
apiVersion: v1
kind: Secret
metadata:
  name: mongodb-credentials
  namespace: herencia
type: Opaque
data:
  # Base64 encoded MongoDB connection string
  # Example format: mongodb://user:password@host:port/database?authSource=admin
  mongodb-uri: <BASE64_ENCODED_MONGODB_URI>
